header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/video/upload") Upload Video
                li
                    a(href="/user/edit") Edit Profile
                li
                    a(href="/user/logout")  Log Out
                li
                    a(href=`/user/${loggedInUser._id}`)
                        if (loggedInUser.avatarUrl)
                            img.header__avatar(src=loggedInUser.avatarUrl)
                        else
                            img.header__avatar(src="https://mdtube.s3.ap-northeast-2.amazonaws.com/defaults/default_avatar.jpg")
            else
                li
                    a(href="/login") Log In
                li
                    a(href="/join").header__btn  Join