extends base

block content
    form(method="POST")
        input(placeholder="아이디", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(type="submit", value="로그인")
        include partials/social-login
    div.auth-switch
        span 아직 계정이 없으신가요?
        a(href="/join") 먼저 회원가입해주세요. &rarr;