extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#startBtn.social__btn recording 6seconds shorts⚡
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="제목", required, type="text", name="title", maxlength=80)
            input(placeholder="설명", required, type="text", name="description", minlength=2)
            input(placeholder="해시태그(,로 구분하여 작성해주세요)", required, type="text", name="hashtags")
            input(type="submit", value="업로드")

block scripts
    script(src="/assets/js/recorder.js") 